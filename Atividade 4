#include <stdio.h>
#include <locale.h>
#include <string.h>
int main(){
	setlocale(LC_ALL,"");
	
    float base, altura, area;
    
    printf("Digite a base do retângulo: ");
    scanf("%f", &base);
    
    printf("Digite a altura do retângulo: ");
    scanf("%f", &altura);
    
    area = base * altura;
    
    printf("A area do retângulo é: %.2f.\n", area);
    
    return 0;
}
